 @model IEnumerable<INTERFACE_ITRON_SAPHIRv2CIE.Common.InfoSite_ToIntegrate>

@using GridMvc.Html 



@if(Model.Count()>0)
{
<div id="divGrid">
     
     <span style="font-style:italic;color:red;visibility:hidden">Total Affiché : @Model.Count()</span>

   
 <table id="tbSite" class="display" cellspacing="0" width="1000px"  >
    <thead>
       <tr>
                    
        <th>
            @Html.DisplayName("Client")
        </th>
        <th>
            @Html.DisplayName("IDENTIFIANT ABONNE")
        </th>
        <th>
            @Html.DisplayName("REFERENCE RACCORD")
        </th>
        <th>
            @Html.DisplayName("ADRESSE")
        </th>
        <th>
            @Html.DisplayName("N° COMPTEUR")
        </th>
        <th>
            @Html.DisplayName("SITE EXP")
        </th>
        
    </tr>
   </thead>

    <tbody>
@foreach (var item in Model) {
    <tr>
                 
        <td>
            @Html.DisplayFor(modelItem => item.Client)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IDABON)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.REFRACCORD)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ADRESSE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NUMCTR)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SITEEXP)
        </td>
        
      
    </tr>
}
    </tbody>
</table>
 


</div>
}
 

<script type="text/javascript">
$( document ).ready(function() {
    //alert('hello');
    $('#divGrid').slideDown("slow");
    //divGrid.slideToggle

    $('#tbSite').DataTable();
       
});
</script>